<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".JuegoAjusted">

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:elevation="20dp">

        <ImageButton
            android:id="@+id/volver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="13dp"
            android:background="#00000000"
            android:onClick="onClick"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="21dp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/action">

        <TableRow>

            <TextView
                android:id="@+id/textDesplegadas"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Desplegadas"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textIntentos"
                android:layout_width="wrap_content"
                android:text="Desplegadas"
                android:textColor="#000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textCorrectas"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text="Desplegadas"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textIncorrectas"
                android:layout_width="wrap_content"
                android:text="Desplegadas"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/porcentaje"
                android:layout_width="match_parent"
                android:text="Desplegadas"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/tiempo"
                android:layout_width="match_parent"
                android:text="Desplegadas"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/tiempoTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/table"
        android:text="Desplegadas"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/Palabra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Desplegadas"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear"
        android:layout_alignParentStart="true"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn3"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>